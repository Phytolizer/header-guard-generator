{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "error",
        "eqeqeq": "error",
        "no-throw-literal": "error",
        "semi": 2
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}